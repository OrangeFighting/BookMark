<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_head_photo_and_text_item_layout_head_photo_left_gap"
        >
        <com.mclab.lcc.component.VerticalLineView
            android:id="@+id/vv_up_line_view_headphoto_and_introtext_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            >
        </com.mclab.lcc.component.VerticalLineView>
        <RelativeLayout
            android:id="@+id/rl_head_photo_view_headphoto_and_introtext_item_layout"
            android:layout_width="@dimen/view_head_photo_item_layout_head_photo_and_background_size"
            android:layout_height="@dimen/view_head_photo_item_layout_head_photo_and_background_size"
            android:layout_below="@+id/vv_up_line_view_headphoto_and_introtext_item_layout"
            android:background="@drawable/activity_main_ic_headphoto"
            >
            <com.mclab.lcc.component.CircleImageView
                android:id="@+id/cv_head_photo_view_headphoto_and_introtext_item_layout"
                android:layout_width="@dimen/view_head_photo_item_layout_head_photo_width"
                android:layout_height="@dimen/view_head_photo_item_layout_head_photo_height"
                android:layout_centerInParent="true"
                android:src="@drawable/p1" />
        </RelativeLayout>
        <com.mclab.lcc.component.VerticalLineView
            android:id="@+id/vv_down_line_view_headphoto_and_introtext_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_head_photo_view_headphoto_and_introtext_item_layout"
            android:layout_centerInParent="true" />
	</RelativeLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_head_photo_and_text_item_layout_gap_between_head_photo_and_text"
        android:layout_marginRight="@dimen/view_head_photo_and_text_item_layout_intro_text_right_gap"
        android:layout_marginTop="@dimen/view_vertical_line_item_layout_height"
        android:orientation="vertical"
	    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_head_photo_name_view_head_photo_intro_text_item_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:includeFontPadding="false"
                android:text="川大来了外星人川大来了外星人川大来了外星人川大来了外星人"
                android:textColor="@color/view_head_photo_and_intro_text_item_layout_name_text_color"
                android:textSize="@dimen/view_head_photo_and_intro_text_item_layout_name_text_size" 
                >
             </TextView>
             
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_head_photo_and_intro_text_item_layout_visit_title_magin_right"
                android:layout_marginTop="@dimen/view_head_photo_and_intro_text_item_layout_Gap_between_name_and_time_text_size"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_visit_title_head_photo_and_intro_text_item_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读数:"
                    android:textColor="@color/view_head_photo_and_intro_text_item_layout_visit_count_text_color"
                    android:textSize="@dimen/view_head_photo_and_intro_text_item_layout_visit_count_size" />

                <TextView
                    android:id="@+id/tv_visit_count_head_photo_and_intro_text_item_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="233"
                    android:textColor="@color/view_head_photo_and_intro_text_item_layout_visit_count_text_color"
                    android:textSize="@dimen/view_head_photo_and_intro_text_item_layout_visit_count_size" />
            </LinearLayout>
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/view_head_photo_and_intro_text_item_layout_Gap_between_name_and_time_text_size"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_time_title_head_photo_and_intro_text_item_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间:"
                    android:textColor="@color/view_head_photo_and_intro_text_item_layout_time_count_text_color"
                    android:textSize="@dimen/view_head_photo_and_intro_text_item_layout_time_count_size" />

                <TextView
                    android:id="@+id/tv_time_count_head_photo_and_intro_text_item_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-10-19"
                    android:textColor="@color/view_head_photo_and_intro_text_item_layout_time_count_text_color"
                    android:textSize="@dimen/view_head_photo_and_intro_text_item_layout_time_count_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
